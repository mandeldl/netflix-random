{
  "manifest_version": 2,

  "name": "Netflix Random",
  "description": "This extension selects a random video on Netflix and plays it",
  "version": "1.0",
  "background" : {
     "scripts" : ["background.js"]
   },
   "icons": { "16": "icon16.png",
              "48": "icon48.png",
             "128": "icon128.png" },
  "browser_action": {
    "default_icon": "icon48.png",
    "default_title": "Netflix Random"
  },
  "permissions": [
    "activeTab"
  ]
}
